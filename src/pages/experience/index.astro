<style>
    ul {
        list-style-type: none;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        padding: 0 0 60px 0;
    }
    
    .wrapper {
        margin: 0 32px;
        font-family: var(--font-main);
        padding: 24px;
        border: 1px solid var(--tile5);
        background-color: var(--tile2);

        > header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 16px;
            padding-bottom: 12px;
            border-bottom: 1px solid var(--tile4);

            > .title {
                flex: 1;
                
                > h2 {
                    font-size: 1.75rem;
                    color: var(--text1);
                    font-weight: 700;
                    margin-bottom: 4px;
                    line-height: 1.2;

                    > a {
                        color: var(--text1);
                        text-decoration: none;
                        transition: color 0.2s;
                        
                        &:hover {
                            color: var(--link);
                            text-decoration: underline;
                        }
                    }
                }

                > p {
                    font-size: 1.2rem;
                    color: var(--link);
                    font-weight: 500;
                    font-style: italic;
                }
            }

            > .date {
                font-size: 0.95rem;
                color: var(--text2);
                font-weight: 400;
                text-align: right;
                white-space: nowrap;
                margin-left: 16px;
                padding: 4px 8px;
            }
        }

        > a {
            color: var(--link);
            font-family: var(--font-main);
            font-size: 1.1rem;
            font-weight: 500;
            text-decoration: none;
            
            &:hover {
                text-decoration: underline;
            }
        }

        .description {
            margin-top: 12px;
            font-size: 1.15rem;
            color: var(--text2);
            line-height: 1.6;
            
            &:first-of-type {
                margin-top: 0;
            }

            > a {
                color: var(--link);
                font-weight: 500;
                text-decoration: none;
                
                &:hover {
                    text-decoration: underline;
                }
            }
        }
    }

    .list {
        list-style-type: none;
        margin: 16px 0 8px 16px;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 6px;
        
        > li {
            position: relative;
            
            &::before {
                content: '→';
                position: absolute;
                left: -16px;
                color: var(--link);
                font-weight: bold;
            }
            
            > a {
                color: var(--link);
                font-family: var(--font-main);
                font-size: 1.05rem;
                font-weight: 500;
                text-decoration: none;
                
                &:hover {
                    text-decoration: underline;
                    color: var(--brand);
                }
            }
        }
    }

    a {
        color: var(--link);
    }

    @media (max-width: 640px) {
        .wrapper > header {
            flex-direction: column;
            align-items: flex-start;
            
            > .date {
                margin-left: 0;
                margin-top: 8px;
                align-self: flex-start;
            }
        }
    }
</style>
