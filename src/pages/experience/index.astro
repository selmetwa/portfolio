<style>
    ul {
        list-style-type: none;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 0 0 60px 0;
    }
    .wrapper {
        margin: 4px 32px;
        font-family: var(--font-main);
        padding: 12px;
        border: 2px solid var(--tile6);
        background-color: var(--tile4);

        > header {
            display: flex;
            justify-content: space-between;

            > .title {
                > h2 {
                    font-size: 1.65rem;
                    color: var(--text1);
                    font-weight: 600;

                    > a {
                        color: var(--text1);
                        transition: color 0.2s;
                        &:hover {
                            color: var(--link);
                        }
                    }
                }

                > p {
                    font-size: 1.35rem;
                    color: var(--text2);
                }
            }

            > .date {
                font-size: 1.125rem;
                color: var(--text2);
            }
        }

        > a {
        color: var(--link);
        font-family: var(--font-main);
        font-size: 1.25rem;
    }

        .description {
            margin-top: 8px;
            font-size: 1.35rem;
            color: var(--text2);
        }
    }

    .list {
        list-style-type: none;
        margin-top: 6px;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        > li {
            > a {
                color: var(--link);
                font-family: var(--font-main);
                font-size: 1.125rem;
            }
        }
    }

    a {
      color: var(--link);
    }
</style>
